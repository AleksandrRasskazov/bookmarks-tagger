{
	"name": "Bookmarks Tagger",
	"version": "1.1.2",
	"manifest_version": 2,
	"description": "Assign tags to your bookmarks and search for them through the address bar.",

	"icons": {
		"16" : "media/icon16-on.png",
		"48" : "media/icon48.png",
		"96" : "media/icon96.png",
		"112": "media/icon112.png"
	},

	"browser_action": {
		"default_icon" : "media/icon19.png",
		"default_title": "Bookmarks Tagger",
		"default_popup": "popup.html"
	},

	"background": {
		"scripts": ["global.js", "chrome_ex_oauthsimple.js", "chrome_ex_oauth.js", "background.js"]
	},

	"omnibox": { "keyword": "bt" },

	"permissions": [
		"bookmarks", "tabs",
		"https://www.google.com/accounts/OAuthGetRequestToken",
		"https://www.google.com/accounts/OAuthAuthorizeToken",
		"https://www.google.com/accounts/OAuthGetAccessToken"
	],
	
	"options_page": "options.html",
	
	"content_security_policy": "script-src 'self'; object-src 'self'"
}
