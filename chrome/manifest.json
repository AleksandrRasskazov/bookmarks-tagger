{
	"name": "Bookmarks Tagger",
	"version": "1.0",
	"manifest_version": 2,
	"description": "Gives a tag to your bookmarks",

	"icons": {
		"16": "icon.png"
	},

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Bookmark Tagger",
		"default_popup": "popup.html"
	},

	"background": {
		"scripts": ["background.js"]
	},

	"omnibox": { "keyword": "bt" },

	"permissions": [
		"bookmarks", "tabs"
	],
	
	"options_page": "options.html",
	
	"content_security_policy": "script-src 'self'; object-src 'self'"
}
