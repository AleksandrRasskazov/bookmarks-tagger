{
	"name": "Bookmarks Tagger",
	"version": "1.0",
	"manifest_version": 2,
	"description": "Gives a tag to your bookmark sites",

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Bookmark Tagger",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["bookmarks.js"]
		}
	],

	"background": {
		"scripts": ["background.js"]
	},

	"permissions": [
		"bookmarks", "tabs", "*://*/*"
	]
}
